# Django 基础配置
# ------------------------------------------------------------------------------
DJANGO_DEBUG=True
DJANGO_READ_DOT_ENV_FILE=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_CORS_ALLOW_ALL_ORIGINS=True
DJANGO_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# 数据库配置
# ------------------------------------------------------------------------------
MYSQL_DATABASE=django_db
MYSQL_USER=root
MYSQL_PASSWORD=root
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_CONN_MAX_AGE=21600

# 数据库连接池配置
# ------------------------------------------------------------------------------
MYSQL_POOL_MAX_SIZE=20
MYSQL_POOL_MIN_SIZE=5
MYSQL_POOL_MAX_OVERFLOW=10
MYSQL_POOL_TIMEOUT=30
MYSQL_POOL_RECYCLE=3600

# Celery 配置
# ------------------------------------------------------------------------------
CELERY_BROKER_URL=redis://localhost:6379/0

# 安全配置
# ------------------------------------------------------------------------------
DJANGO_SECURE_SSL_REDIRECT=False
DJANGO_SECURE_HSTS_SECONDS=2592000
DJANGO_SECURE_HSTS_INCLUDE_SUBDOMAINS=True
DJANGO_SECURE_HSTS_PRELOAD=True
DJANGO_SESSION_COOKIE_SECURE=False
DJANGO_CSRF_COOKIE_SECURE=False

# JWT 配置
# ------------------------------------------------------------------------------
DJANGO_RSA_PASSWORD=your_secure_rsa_password_here
DJANGO_BASE64_SECRET_KEY=your_secure_base64_key_here
JWT_EXPIRATION_DELTA=100
JWT_AUTH_HEADER_PREFIX=Bearer
TOKEN_LIFETIME=3600
TOKEN_DETECT=1800
TOKEN_RENEW_PERIOD=3600
ACCESS_TOKEN_LIFETIME=150
REFRESH_TOKEN_LIFETIME=1

# API 限流配置
# ------------------------------------------------------------------------------
DJANGO_THROTTLE_ANON=100/day
DJANGO_THROTTLE_USER=1000/day

# 阿里云短信配置
# ------------------------------------------------------------------------------
ALI_SMS_ACCESS_KEY_ID=your_access_key_id
ALI_SMS_ACCESS_KEY_SECRET=your_access_key_secret
ALI_SMS_REGION_ID=cn-hangzhou
ALI_SMS_ENDPOINT=dysmsapi.aliyuncs.com
ALI_SMS_SIGN_NAME=your_sms_sign_name
ALI_SMS_CODE_TEMPLATE=your_template_code
SMS_CODE_EXPIRE=600
SMS_CODE_LENGTH=6

# 验证码配置
# ------------------------------------------------------------------------------
LOGIN_CODE_TYPE=ARITHMETIC
LOGIN_CODE_LENGTH=4
LOGIN_CODE_WIDTH=120
LOGIN_CODE_HEIGHT=40
LOGIN_CODE_FONT_SIZE=20
EXPIRATION_DELTA=2

# 用户配置
# ------------------------------------------------------------------------------
DJANGO_ACCOUNT_ALLOW_REGISTRATION=True
DJANGO_PAGE_SIZE=10
USER_CACHE_IDLE_TIME=3600
SINGLE_LOGIN=True
START_PASSWORD=123456

# 文件上传配置
# ------------------------------------------------------------------------------
FILE_UPLOAD_PERMISSIONS=0o666

# 开发工具配置
# ------------------------------------------------------------------------------
# 如果使用VS Code进行开发，可以设置以下环境变量
PYTHONPATH=${workspaceFolder}
DJANGO_SETTINGS_MODULE=config.settings.local 